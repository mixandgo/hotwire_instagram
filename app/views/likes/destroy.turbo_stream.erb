<%= turbo_stream.update "likes-post-#{@post.id}" do %>
  <%= render partial: "likes/like", locals: { post: @post, user: current_user } %>
<% end %>
<%= turbo_stream.update "likes-post-count-#{@post.id}" do %>
  <%= render partial: "posts/likes_count", locals: { count: @post.likes.count } %>
<% end %>
