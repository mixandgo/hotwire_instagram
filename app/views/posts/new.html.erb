<%= turbo_frame_tag "modal" do %>
  <%= form_for @post, data: { controller: "modal" } do |f| %>
    <div tabindex="-1" aria-hidden="false" class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 w-full md:inset-0 h-modal md:h-full bg-gray-800/15 backdrop-blur">
      <div class="relative p-4 w-3/4 mx-auto mt-12 max-w-2xl h-full md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg dark:bg-gray-700 drop-shadow-xl">
          <!-- Modal header -->
          <div class="flex justify-between items-start p-4 rounded-t border-b dark:border-gray-600">
            <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">New post</h2>
            <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-action="click->modal#close">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
            </button>
          </div>
          <!-- Modal body -->
          <div class="p-6 space-y-6">
            <div class="my-5">
              <%= f.label :body %>
              <%= f.text_area :body, autofocus: true, placeholder: "Add some text here...", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
            </div>

            <div class="my-5">
              <%= f.label :file %>
              <%= f.file_field :file %>
            </div>
          </div>
          <!-- Modal footer -->
          <div class="flex items-center p-6 space-x-2 rounded-b border-t border-gray-200 dark:border-gray-600">
            <%= f.submit "Save", class: "button"  %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<div class="border-red-500"></div>
